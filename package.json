{
  "name": "dotoriham",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "configs/*",
      "packages/*"
    ]
  },
  "scripts": {
    "web:dev": "yarn workspace dotoriham-web dev",
    "storybook": "storybook dev -p 6006",
    "type-check": "yarn workspaces foreach -pi run type-check",
    "build-storybook": "storybook build",
    "eslint": "yarn workspaces foreach -pi run eslint",
    "eslint:fix": "yarn workspaces foreach -pi run eslint:fix --cache",
    "prettier": "yarn workspaces foreach -pi run prettier",
    "prettier:fix": "yarn workspaces foreach -pi run prettier:fix --cache",
    "icons:build": "yarn workspace @dotoriham/icons build",
    "ui:make": "yarn workspace @dotoriham/ui make",
    "build": "tsx scripts/build",
    "publish": "tsx scripts/publish",
    "publish:alpha": "tsx scripts/publish --stage alpha --tag next",
    "publish:beta": "tsx scripts/publish --stage beta --tag next"
  },
  "packageManager": "yarn@4.0.2",
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.5",
    "@dotoriham/prettier-config": "workspace:*",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.7",
    "@storybook/addon-essentials": "^8.3.2",
    "@storybook/addon-interactions": "^8.3.2",
    "@storybook/addon-links": "^8.3.2",
    "@storybook/blocks": "^8.3.2",
    "@storybook/builder-vite": "^8.3.2",
    "@storybook/react": "^8.3.2",
    "@storybook/react-webpack5": "^8.3.2",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/babel__preset-env": "^7",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.13",
    "@types/prop-types": "^15",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/signale": "^1.4.7",
    "@types/yargs": "^17.0.33",
    "autoprefixer": "^10.4.16",
    "chalk": "^5.3.0",
    "esbuild": "^0.23.1",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.40.0",
    "eslint-plugin-import": "^2.27.5",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "hash-css-selector": "^1.1.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.32",
    "postcss-import": "^16.0.0",
    "postcss-mixins": "^9.0.4",
    "postcss-nesting": "^12.0.2",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.1.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.22.2",
    "rollup-plugin-banner2": "^1.3.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-postcss": "^4.0.2",
    "signale": "^1.4.0",
    "simple-git": "^3.27.0",
    "storybook": "^8.3.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
