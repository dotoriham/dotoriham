    "@dotoriham/stylelint-config": "workspace:*",
    "@storybook/react": "^7.0.5",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.1.3",
    "eslint": "8.32.0",
