{
  "include": ["./scripts", "./@types", "./packages/*", "./apps/*"],
  "exclude": [
    "node_modules",
    "./packages/*/lib/**/*",
    "./packages/*/esm/**/*",
    "./packages/*/cjs/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@dotoriham/*": ["src/packages-*/src"]
    }
  }
}
